generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}

model Responses {
  id Int @id @default(autoincrement())
  email String?
  fullName String?
  yearOfGraduation Int?
  yearOfSurvey Int?
  department String?
  program String?
  major String?
  isEmployed String?
  isJobAligned String?
  isSelfEmployed String?
  isFurtherStudies String?
  typeOfOrganization String?
  currentJobLocated String?
}

model Department {
  id Int @id @default(autoincrement())
  department String
  listOfProgram Program[]
}

model Program{
  id Int @id @default(autoincrement())
  program String
  relatedToDepartment Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  listOfMajor Major[]
}

model Major{
  id Int @id @default(autoincrement())
  major String
  relatedToProgram Program @relation(fields: [programId], references: [id])
  programId Int
}

